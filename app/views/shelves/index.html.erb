<h1>Listing Shelves</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Capacity</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelves.each do |shelf| %>
      <tr>
        <td><%= shelf.code %></td>
        <td><%= shelf.capacity %></td>
        <td><%= shelf.location %></td>
        <td><%= link_to 'Show', shelf %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
