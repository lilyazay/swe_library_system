<h1>Checkout details</h1>

<p>
  <strong>Isbn:</strong>
  <%= @book.isbn %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Status:</strong>
  <%= @book.status %>
</p>

<p>
  <strong>Email ID of Student</strong>
</p>

<%= form_for(@checkout_history) do |f|%>
    <div class="field">
      <%= f.label :email %><br>
      <% students_array = Student.all.map { |student| [student.email] } %>
      <%= f.select(:email,options_for_select(students_array)) %><br>

    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>



