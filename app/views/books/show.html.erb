<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-20 col-sm-11 col-md-11">
      <div class="well well-sm">
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                </div>
                  <div class="col-sm-6 col-md-8 text-center">
                    <h4>
                    <p>
                      <strong>Title:</strong>
                      <%= @book.title %>
                    </p>
                    </h4>
                    <p>
                      <strong>Isbn:</strong>
                     <%= @book.isbn %>
                    </p>
                    <p>
                      <strong>Author:</strong>
                      <%= @book.author %>
                    </p>
                    <p>
                      <strong>Genre:</strong>
                      <%= @book.genre %>
                    </p>
                    <p>
                      <strong>Shelving code:</strong>
                      <%= @book.shelving_code %>
                    </p>
                    <p>
                      <strong>Publisher:</strong>
                      <%= @book.publisher %>
                    </p>
                    <p>
                      <strong>Language:</strong>
                      <%= @book.language %>
                    </p>
                    <p>
                      <strong>Available:</strong>
                      <%= @book.available %>
                    </p>
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>

<div class='text-center'>
  <% if @book.available == true %>
  <%= link_to 'Checkout', book_path(@book.isbn), method: :post, data: { confirm: 'Are you sure you would like to checkout this book?' }, :class => 'btn btn-default' %>
  <% end %>
<%= link_to 'Back', root_url, {:style=>'color:#FFFFFF;', :class => "btn btn-primary"} %>
</div>

