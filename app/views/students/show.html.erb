<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Student type:</strong>
  <%= @student.student_type %>
</p>

<%= link_to 'Edit', edit_student_path(@student) %>
<%if @student.student_type=='P' || @student.student_type=='A' %>
<%= link_to 'Back', admin_home_path%>
<% end %>
<%if @student.student_type=='U' %>
<%= link_to 'Back', student_home_path%>
<% end %>

