<p id="notice"><%= notice %></p>
<div class="row">
  <div class="contain clearfix pad4y col-sm-8 col-sm-offset-2">
  	<h1>My Profile</h1>
<div class="col">
<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Student type:</strong>
  <%= @student.student_type %>
</p>

<%= link_to 'Edit', edit_student_path(@student) %>
<%if @student.student_type=='P' || @student.student_type=='A' %>
