<h1>Editing Student</h1>

<%= render 'form' %>

<%= link_to 'Show', @student %> |
<% @student=Student.find_by_id(session[:current_student_id]) %>
<% if(@student.student_type=='A' || @student.student_type=='P') %>
    <%= link_to 'Back', admin_home_path %>
<% elsif (@student.student_type=='U') %>
    <%= link_to 'Back', student_home_path %>
<% end %>